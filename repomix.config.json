{
  "$schema": "https://repomix.com/schemas/latest/schema.json",
  "input": {
    "maxFileSize": 52428800
  },
  "output": {
    "filePath": "docs/repomix.md",
    "style": "markdown",
    "parsableStyle": true,
    "fileSummary": false,
    "directoryStructure": true,
    "files": true,
    "removeComments": false,
    "removeEmptyLines": false,
    "compress": false,
    "topFilesLength": 5,
    "showLineNumbers": false,
    "copyToClipboard": true,
    "git": {
      "sortByChanges": false,
      "sortByChangesMaxCommits": 100,
      "includeDiffs": false
    }
  },
  "include": [
    "package.json",
    "tsconfig.json",
    // "src",
    // "docs/test.plan.md",
    "docs/scn.readme.md",
    // "test",
       "src/serializer.ts",

    "test/ts/integration/dependency-graph.test.ts",
    "test/ts/integration/css-parsing.test.ts",
    "test/ts/unit/code-entities.test.ts",
    "test/ts/unit/general-structural.test.ts",

    "repograph/package.json",
    "repograph/tsconfig.json",
    "repograph/tsconfig.build.json",
    // "repograph/src",
    //
    "repograph/src/pipeline/analyze.ts",
    "repograph/src/tree-sitter/language-config.ts",

  ],
  "ignore": {
    "useGitignore": true,
    "useDefaultPatterns": true,
    "customPatterns": [
      "repograph/src/utils",
      "repograph/src/composer.ts"
    ]
  },
  "security": {
    "enableSecurityCheck": true
  },
  "tokenCount": {
    "encoding": "o200k_base"
  }
}
